{
  "compilerOptions": {
    "outDir": "./dist/esm/",
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es5",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": false
  },
  "files": ["./src/index.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
